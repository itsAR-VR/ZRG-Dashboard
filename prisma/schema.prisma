// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Stores GHL API Keys per sub-account for multi-tenancy
model Client {
  id            String     @id @default(uuid())
  name          String
  ghlLocationId String     @unique // Used to identify which client sent the webhook
  ghlPrivateKey String     // The generic API key for this sub-account
  workspaceId   String     // To group clients
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  leads         Lead[]
  campaigns     Campaign[]
}

// GHL Workflows/Campaigns synced from the API
model Campaign {
  id            String   @id @default(uuid())
  ghlWorkflowId String   @unique
  name          String
  status        String   @default("active") // active, inactive, draft
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  leads         Lead[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([clientId])
}

// Lead/Contact record synced from GHL
model Lead {
  id           String        @id @default(uuid())
  ghlContactId String        @unique
  firstName    String?
  lastName     String?
  email        String?
  phone        String?
  status       String        @default("new")
  sentimentTag String?       // e.g., 'Meeting Requested', 'Not Interested', etc.
  clientId     String
  client       Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  campaignId   String?       // Optional link to the originating campaign
  campaign     Campaign?     @relation(fields: [campaignId], references: [id])
  messages     Message[]
  followUps    FollowUpTask[]
  aiDrafts     AIDraft[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([clientId])
  @@index([campaignId])
  @@index([sentimentTag])
}

// SMS messages synced from GHL
model Message {
  id        String   @id @default(uuid())
  body      String   @db.Text
  direction String   // 'inbound' or 'outbound'
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([leadId])
  @@index([createdAt(sort: Desc)])
}

// Follow-up tasks for leads
model FollowUpTask {
  id               String    @id @default(uuid())
  leadId           String
  lead             Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  type             String    // 'email', 'call', 'sms', 'linkedin'
  dueDate          DateTime
  status           String    @default("pending") // pending, completed, skipped
  suggestedMessage String?   @db.Text
  sequenceStep     Int?      // Current step in campaign sequence
  totalSteps       Int?      // Total steps in campaign
  campaignName     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([leadId])
  @@index([dueDate])
  @@index([status])
}

// AI-generated draft messages pending approval
model AIDraft {
  id        String   @id @default(uuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  content   String   @db.Text
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([leadId])
  @@index([status])
}

// User settings and preferences
model UserSettings {
  id                   String   @id @default(uuid())
  userId               String   @unique @default("default") // For now, single user
  // AI Personality Settings
  aiPersonaName        String?
  aiTone               String?  @default("friendly-professional")
  aiGreeting           String?
  aiSignature          String?  @db.Text
  // Automation Rules
  autoApproveMeetings  Boolean  @default(true)
  flagUncertainReplies Boolean  @default(true)
  pauseForOOO          Boolean  @default(true)
  autoBlacklist        Boolean  @default(true)
  // Notification Settings
  emailDigest          Boolean  @default(true)
  slackAlerts          Boolean  @default(true)
  // Schedule Settings
  timezone             String?
  workStartTime        String?  @default("09:00")
  workEndTime          String?  @default("17:00")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}
